[user]
	name = Tim Moore
	email = tmoore@incrementalism.net
[color]
	ui = auto
[alias]
	co = checkout
	br = branch
	graph = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	st = status
	stat = status
	svn-checkout = svn clone -s
	serve = !git daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
	ff = pull --ff-only
	conflicts = diff --name-only --diff-filter=U
	authors = shortlog -sne
[github]
	user = TimMoore
[merge]
	tool = opendiff
	conflictstyle = diff3
[push]
	default = simple
[core]
	excludesfile = /Users/tmoore/.gitignore_global
[branch]
	autosetuprebase = always
[rebase]
	autosquash = true
[credential]
	helper = osxkeychain
[diff]
	algorithm = patience
[pager]
	log  = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
	show = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
	diff = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
